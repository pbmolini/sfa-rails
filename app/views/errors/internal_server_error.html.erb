<% title s_("Title|Error") %>
<div class="container-fluid white-box error-box">
	<div class="row">
		<div class="col-md-6">
			<h1><%= s_("ErrorPage|Oh no!") %></h1>
			<p class="lead"><%= s_("ErrorPage|There has been a problem with your request.") %></p>
			<p class="lead">
				<%= (s_("ErrorPage|Try again later or tell us the problem writing to %{mail_to}.") %{mail_to: mail_to("hello@seaforall.com", "hello@seaforall.com", subject: s_("ErrorPage|Houston we have a problem"))}).html_safe %>
			</p>
		</div>		
		<div class="col-md-6">
			<div class="error-image">
				<%= inline_svg 'np-bailout', class: 'error-svg', nocomment: true %>
			</div>
		</div>
	</div>
</div>