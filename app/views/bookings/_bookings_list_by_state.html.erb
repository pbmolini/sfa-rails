<% if @bookings.any? %>
  <% if @accepted_bookings.any? %>
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="state-anchor" id="accepted"></div>
        <h2><%= _("Accepted Bookings") %></h2>
        <%= render 'bookings_list', bookings: @accepted_bookings %>
      </div>
    </div>
  <% end %>
  <% if @pending_bookings.any? %>
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="state-anchor" id="pending"></div>
        <h2><%= _("Pending Bookings") %></h2>
        <%= render 'bookings_list', bookings: @pending_bookings %>
      </div>
    </div>
  <% end %>
  <% if @rejected_bookings.any? %>
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="state-anchor" id="rejected"></div>
        <h2><%= _("Rejected Bookings") %></h2>
        <%= render 'bookings_list', bookings: @rejected_bookings %>
      </div>
    </div>
  <% end %>
  <% if @canceled_bookings.any? %>
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="state-anchor" id="canceled"></div>
        <h2><%= _("Canceled Bookings") %></h2>
        <%= render 'bookings_list', bookings: @canceled_bookings %>
      </div>
    </div>
  <% end %>
  <!-- <%# if @expired_bookings.any? %>
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="state-anchor" id="expired"></div>
        <h2><%#= _("Expired Bookings") %></h2>
        <%#= render 'bookings_list', bookings: @expired_bookings %>
      </div>
    </div>
  <%# end %> -->
<% else %>
  <div class="row">
    <div class="col-md-12 text-center">
      <h3><%= _("No bookings yet") %></h3>
    </div>
  </div>
<% end %>