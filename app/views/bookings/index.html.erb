

<h1>Listing Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Start time</th>
      <th>End time</th>
      <th>People on board</th>
      <th>Boat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.start_time %></td>
        <td><%= booking.end_time %></td>
        <td><%= booking.people_on_board %></td>
        <td><%= link_to booking.boat.name, booking.boat %></td>
        <td><%= link_to 'Show', boat_booking_path(booking.boat, booking) %></td>
        <td><%= link_to 'Edit', edit_boat_booking_path(booking.boat, booking) %></td>
        <td><%= link_to 'Destroy', boat_booking_path(booking.boat, booking), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to("Back to #{@boat.name}", boat_path(@boat)) if @boat %>