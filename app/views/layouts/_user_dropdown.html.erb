<li class="dropdown">
  <%= link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' }, role: 'button', aria: { expanded: 'false' } do %>
    <%= image_tag current_user.image(:thumb), class: 'user-avatar' %>
    <%= current_user.first_name %>
    <span class="caret"></span>
  <% end %>
  <ul class="dropdown-menu" role="menu">
    <li role="presentation"><%= link_to(fa_icon('tachometer', text:_("Dashboard")), dashboard_path) %></li>
    <li role="presentation"><%= link_to(fa_icon('user', text: _("My Profile")), edit_user_registration_path) %></li>
    <li role="presentation" class="divider"></li>
    <li role="presentation"><%= link_to(fa_icon('sign-out', text: "Logout"), destroy_user_session_path, method: :delete) %></li>
  </ul>
</li>