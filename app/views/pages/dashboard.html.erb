<% title s_("Title|Dashboard") %>
<% current_user_navbar active_bc_title: s_('Title|Dashboard') %>
<div class="container dashboard">
  <div class="row">
    <div class="col-md-2 hidden-sm hidden-xs gray-box">
      <div class="avatar-preview"><%= image_tag current_user.image.url(:medium) %></div>
      <br>
      <p><%= link_to (n_("%{count} review", "%{count} reviews", current_user.received_reviews.count) %{count: current_user.received_reviews.count}), reviews_path %></p>
      <% if current_user.bookings.any? %>
        <p><%= link_to _("My Bookings"), my_bookings_path %></p>
      <% end %>
      <% if current_user.boats.any? %>
        <p><%= n_("%{count} boat", "%{count} boats", current_user.boats.count) %{count: current_user.boats.count} %></p>
      <% end %>
      <p>
        <small><%= current_user.boats.any? ? _("You own another boat?") : _("You own a boat?") %></small>
        <br>
        <%= link_to _("Register it now"), new_boat_path, class: 'btn btn-success' %>
      </p>
    </div>
    <div class="col-md-10">
      <!-- Welcome message -->
      <% unless current_user.boats.any? or current_user.bookings.any? %>
        <%= render 'pages/dashboard/welcome_panel' %>
      <% end %>

      <%# Incomplete Profile %>
      <% unless current_user.complete? %>
        <%= render 'pages/dashboard/incomplete_profile' %>
      <% end %>
  
      <% if current_user.bookings.any? %>
        <%= render 'pages/dashboard/bookings_panel' %>        
      <% end %>
      
      <% if current_user.boats.any? %>
        <%= render 'pages/dashboard/boats_panel' %>
      <% end %>

    </div>
  </div>
</div>