<% title s_("Title|All the boats") %>
<p class="text-center">
  <%= image_tag("mini-logo.png", height:"50px") %>
</p>
<div class="row boat-search-subtitle">
  <div class="col-sm-12">
    <p>
      <%= s_("All the boats will be available for renting soon") %>
    </p>
  </div>
</div>

<% if @search_location %>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <p class="text-center">
      <% if @search_results_count > 0 %>
        <%= _('There are %{count} boats near %{place}') %{count: @search_results_count, place: @search_location} %>
      <% else %>
        <%= _('Sorry. There are no boats in %{place}. Take a look at the other available boats (or start sharing yours).') %{place: @search_location} %>
      <% end %>
    </p>
  </div>
</div>
<% end %>

<div class="row">
	<% if @boats.any? %>
	  <% @boats.complete.each do |boat| %>
	    <%= render('boat_card', boat: boat) if boat.can_be_published? %>
	  <% end %>
	<% else %>
	<div class="col-sm-10 col-sm-offset-1">
		<p class="lead text-center">
			<%= s_("BoatIndex|We are building our database of boats available for sharing.") %>
			<br>
			<%= s_("BoatIndex|This page will be full of awesome boats in the next few weeks.") %>
		</p>
		<p class="text-center">
			<%= inline_svg 'boat-launch', class: 'boat-launch' %>
		</p>
	</div>
	<% end %>
</div>
