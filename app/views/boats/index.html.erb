<div class="row">
  <div class="col-sm-12">
    <h1>A lot of boats - Ready for your perusal</h1>
  </div>
</div>

<div class="row">
  <% @boats.each do |boat| %>
    <div class="col-sm-3 boat-card-wrapper">
      <div class="boat-card">
        
        <%= link_to boat do %>
          <div>
            <% bg_image = boat.pictures.any? ? boat.pictures.first.image.url : "http://placehold.it/300&text=SeaForAll+rocks!" %>
            <%= image_tag(boat.user.image(:thumb), height: '35px', class: 'boat-owner') %>
            <p class="boat-price"><%= boat.daily_price %> â‚¬</p>
            <div class="picture" style="background-image: url('<%= bg_image %>')">
            </div>
            <div class="caption">
              <h3 class="boat-model"><%= boat.model %></h3>
              <p class="boat-name"><%= boat.name %></p>
              <p class="boat-place"><%= boat.address %></p>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  <% end %>
</div>
