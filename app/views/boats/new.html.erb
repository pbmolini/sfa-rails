<div class="container">
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">

			<h1>New Boat</h1>
			<%= simple_form_for @boat, html: { :multipart => true } do |f| %>
  			<%= f.error_notification %>
  			<% @boat.errors[:base].each do |error| %>
    			<p><%= error %></p>
  			<% end %>
				
				<%= render 'fields', f: f %>
			
  			<%= f.button :submit, _("Create Boat"), class: "btn btn-lg btn-primary" %>
			
			<% end %>
			<%= link_to 'Back', boats_path %>
		</div>
	</div>
</div>
