<div class="col-sm-6 col-md-4 boat-card-wrapper">
  <% if (can? :edit, boat) and !boat.complete? %>
    <p class="complete-profile"><%= link_to _("Complete profile"), edit_boat_path(boat), class: "btn btn-info btn-sm" %></p>
  <% end %>
  <div class="boat-card">
    <%= link_to boat do %>
      <div>
        <% bg_image = boat.pictures.any? ? boat.pictures.first.image.url : "https://placeholdit.imgix.net/~text?txtsize=75&txt=SeaForAll&w=300&h=250" %>
        <%= image_tag(boat.user.image(:thumb), height: '50px', class: 'boat-owner') %>
        <p class="boat-price"><%= boat.daily_price || "??" %> <%= fa_icon 'eur' %></p>
        <div class="picture" style="background-image: url('<%= bg_image %>')"></div>
        <div class="caption">
          <h3 class="boat-model"><%= boat.model.present? ? boat.model : s_("BoatCard|Model not saved") %></h3>
          <p class="boat-name"><%= boat.name.present? ? boat.name : s_("BoatCard|Name not saved") %></p>
          <p class="boat-place"><%= boat.address.present? ? boat.address : s_("BoatCard|Address_not_saved") %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>