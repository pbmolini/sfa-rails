<% title s_("Title|Change your password") %>
<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="row">
        <div class="col-sm-12 text-center">
          <h1><%= _("Change your password") %></h1>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <%= f.input :reset_password_token, as: :hidden %>
            <%= f.full_error :reset_password_token %>

            <%= f.input :password, label: _("New password"), required: true, autofocus: true %>
            <%= f.input :password_confirmation, label: _("Confirm your new password"), required: true %>
            <%= f.button :submit, _("Change my password"), class: 'btn btn-lg btn-success btn-block' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

