<h1>Listing Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Rating</th>
      <th>Comment</th>
      <th>Booking</th>
      <th>Reviewer</th>
      <th>Reviewee</th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.rating %></td>
        <td><%= review.comment %></td>
        <td><%= review.booking_id %></td>
        <td><%= review.reviewer_id %></td>
        <td><%= review.reviewee_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>
