

<h1>Listing Boat Features</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Boat category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boat_features.each do |boat_feature| %>
      <tr>
        <td><%= boat_feature.name %></td>
        <td><%= boat_feature.boat_category %></td>
        <td><%= link_to 'Show', boat_feature %></td>
        <td><%= link_to 'Edit', edit_boat_feature_path(boat_feature) %></td>
        <td><%= link_to 'Destroy', boat_feature, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

