<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
			<h2>Log in</h2>

			<p>
				<%= button_to user_omniauth_authorize_path(:facebook), class: 'btn btn-primary navbar-btn' do %>
				  <%= fa_icon('facebook', text: _("Login with Facebook")) %>
				<% end %>
        <%= _("or just fill the form below") %>
			</p>

			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			  <div class="form-inputs">
			    <%= f.input :email, required: false, autofocus: true %>
			    <%= f.input :password, required: false %>
			    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
			  </div>

			  <div class="form-actions">
			    <%= f.button :submit, _("Log in"), class: 'btn btn-lg btn-success' %>
			  </div>
			<% end %>

			<p>
				<%= render "devise/shared/links" %>
			</p>
			
    </div>
  </div>
</div>